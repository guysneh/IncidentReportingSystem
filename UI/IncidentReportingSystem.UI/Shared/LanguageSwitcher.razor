@inject IJSRuntime JS
@inject NavigationManager Nav

<button class="seg" @onclick='() => SetLang("en")'>EN</button>
<button class="seg" @onclick='() => SetLang("de")'>DE</button>
<button class="seg" @onclick='() => SetLang("he")'>עבר</button>

@code {
    private async Task SetLang(string culture)
    {
        await JS.InvokeVoidAsync("irsCulture.set", culture);
        Nav.NavigateTo(Nav.Uri, new NavigationOptions { ForceLoad = true, ReplaceHistoryEntry = true });
    }
}
