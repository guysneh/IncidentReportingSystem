@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing

<ErrorBoundary>
    <ChildContent>
        <Router AppAssembly="@typeof(App).Assembly" PreferExactMatches="true">
            <Found Context="rd">
                <RouteView RouteData="@rd" DefaultLayout="@typeof(Shared.MainLayout)" />
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(Shared.MainLayout)">
                    <h3>404</h3>
                    <p>Page not found.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </ChildContent>
    <ErrorContent>
        <div style="padding:16px;border:1px solid #f99;background:#fee">
            <h4>Unhandled UI error</h4>
            <p>Something went wrong while rendering.</p>
        </div>
    </ErrorContent>
</ErrorBoundary>
